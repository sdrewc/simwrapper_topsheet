{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bus Volumes",
  "data": {"url": "output_for_simwrapper/Transit_sel_bv_AM.csv"},
  "width": "container",
  "height": 300,
  "autosize": {"type": "fit", "resize": true},
  "encoding": {
    "y": {
      "field": "value",
      "type": "quantitative",
      "stack": "zero",
      "sort": {"op": "sum", "field": "value", "order": "ascending"}
    },
    "x": {
      "field": "line",
      "type": "nominal",
      "sort": {"op": "sum", "field": "value", "order": "ascending"}
    },
    "color": {
      "field": "direction",
      "type": "nominal",
      "scale": {"range": ["#6fb36d","#b8cfb8" ]}
    },
    "tooltip": [
      {"field": "line", "type": "nominal"},
      {"field": "value", "type": "quantitative", "format": ","},
      {"field": "direction", "type": "nominal"}
    ]
  },
  "mark": {"type": "bar", "size": 40},
  "config": {
    "view": {"stroke": "transparent"},
    "axisX": {"grid": true, "title": ""},
    "axisY": {"title": ""}
  }
}
