{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "output_for_simwrapper/VMT_VHT_AM_ratio.csv"
  },
  "selection": {
    "highlight": {"type": "single", "empty": "none", "on": "mouseover"},
    "select": {"type": "multi", "fields": ["area"]}
  },
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "encoding": {
    "x": {"field": "area", "type": "nominal"},
    "y": {"field": "value", "type": "quantitative"},
    "color": {"field": "area", "type": "nominal", "scale": {"range": ["#87CEFA", "#D3D3D3"]}},
    "opacity": {"condition": {"selection": "highlight", "value": 1}, "value": 0.7},
    "tooltip": [{"field": "value", "type": "quantitative"}]
  },
  "width": "container",
  "height": 300,
  "title": "VMT/VHT by Area"
}

