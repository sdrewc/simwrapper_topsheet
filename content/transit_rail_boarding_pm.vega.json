{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Rail Boardings",
  "data": {"url": "output_for_simwrapper/Transit_sel_rb_PM.csv"},
  "width": "container",
  "height": 300,
  "autosize": {"type": "fit", "resize": true},
  "encoding": {
    "x": {"field": "direction", "type": "nominal", "sort": {"op": "sum", "field": "value", "order": "ascending"}},
    "y": {"field": "value", "type": "quantitative", "stack": "zero", "sort": {"op": "sum", "field": "value", "order": "ascending"}, "axis": {"labelAngle": 0, "format": ","}},
    "color": {
      "field": "line",
      "type": "nominal",
      "scale": {
        "domain": ["BART", "Caltrain"],
        "range": ["#f5b37a","#fcddc2"]
      }
    },
    "tooltip": [
      {"field": "line", "type": "nominal"},
      {"field": "value", "type": "quantitative", "format": ","},
      {"field": "direction", "type": "nominal"}
    ]
  },
  "mark": {"type": "bar", "size": 40},
  "config": {
    "view": {"stroke": "transparent"},
    "axisY": {"title": ""},
    "axisX": {"grid": true}
  }
}


